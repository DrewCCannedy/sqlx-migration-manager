{
    "name": "sqlx-migration-manager",
    "displayName": "sqlx-migration-manager",
    "description": "Manage SQLX migrations directly from VS Code with multi-environment support",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.97.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "sqlx-manager.checkMigrationStatus",
                "title": "SQLX: Check Migration Status",
                "icon": "$(info)"
            },
            {
                "command": "sqlx-manager.runMigrations",
                "title": "SQLX: Run Pending Migrations",
                "icon": "$(play)"
            },
            {
                "command": "sqlx-manager.revertMigration",
                "title": "SQLX: Revert Last Migration",
                "icon": "$(debug-step-back)"
            },
            {
                "command": "sqlx-manager.createMigration",
                "title": "SQLX: Create New Migration",
                "icon": "$(add)"
            },
            {
                "command": "sqlx-manager.addEnvironment",
                "title": "SQLX: Add Database Environment"
            },
            {
                "command": "sqlx-manager.editEnvironment",
                "title": "SQLX: Edit Database Environment",
                "icon": "$(edit)"
            },
            {
                "command": "sqlx-manager.deleteEnvironment",
                "title": "SQLX: Delete Database Environment",
                "icon": "$(trash)"
            },
            {
                "command": "sqlx-manager.selectEnvironment",
                "title": "SQLX: Select Current Environment"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "sqlx-explorer",
                    "title": "SQLX Explorer",
                    "icon": "$(database)"
                }
            ]
        },
        "views": {
            "sqlx-explorer": [
                {
                    "id": "sqlxManager",
                    "name": "SQLX Manager"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "sqlx-manager.addEnvironment",
                    "when": "view == sqlxManager",
                    "group": "navigation"
                },
                {
                    "command": "sqlx-manager.checkMigrationStatus",
                    "when": "view == sqlxManager",
                    "group": "navigation@1"
                },
                {
                    "command": "sqlx-manager.runMigrations",
                    "when": "view == sqlxManager && sqlxManager.hasCurrentEnvironment",
                    "group": "navigation@2"
                },
                {
                    "command": "sqlx-manager.revertMigration",
                    "when": "view == sqlxManager && sqlxManager.hasCurrentEnvironment",
                    "group": "navigation@3"
                },
                {
                    "command": "sqlx-manager.createMigration",
                    "when": "view == sqlxManager",
                    "group": "navigation@4"
                }
            ],
            "view/item/context": [
                {
                    "command": "sqlx-manager.editEnvironment",
                    "when": "viewItem == environment",
                    "group": "inline"
                },
                {
                    "command": "sqlx-manager.deleteEnvironment",
                    "when": "viewItem == environment",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.97.0",
        "@typescript-eslint/eslint-plugin": "^8.22.0",
        "@typescript-eslint/parser": "^8.22.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "eslint": "^9.19.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "prettier": "3.5.2",
        "ts-loader": "^9.5.2",
        "typescript": "^5.7.3",
        "uuid": "^11.1.0",
        "webpack": "^5.97.1",
        "webpack-cli": "^6.0.1"
    },
    "lint-staged": {
        "*.{js,ts}": "eslint --fix",
        "*.{js,ts,css,md,json,mjs}": "prettier --write"
    }
}
